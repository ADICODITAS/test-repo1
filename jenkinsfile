pipeline{
  agent any
  stages{
    stage("build"){
      steps {
      sh "bash test.txt"
      echo 'building the application...'
      
      }
        }
       stage("test"){
        steps{
          echo "testing"
          }
       }
     stage("deploy"){
     steps{
      echo "deploying"
        }
       } 
     }
    }
